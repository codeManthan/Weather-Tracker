<div class="container">
  <div class="header text-center">
    <h2 class="display-4">Weather Report of <%= @city.name %></h2>
    <p class="lead">Past 7 Days Overview</p>
  </div>

  <turbo-frame id="city-show">
    <%= render "current_day_card", locals: { temp_data: @temp_data } %>
  </turbo-frame>

  <%= render "week_day_cards" %>

  <div class="text-center my-4">
    <%= link_to 'Back to Weather Reports', weather_reports_path, class: "btn btn-outline-primary" %>
  </div>
</div>
