<div class="modal fade" id="newCityModal" tabindex="-1" aria-labelledby="newCityModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newCityModalLabel">Add New City</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: weather_reports_path, method: :post, remote: true, id: "newCityForm" do |f| %>
          <div class="mb-3">
            <%= f.label :name, "City Name", class: "form-label" %>
            <%= f.text_field :name, name: "city[name]", class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :lon, "Longitude", class: "form-label" %>
            <%= f.number_field :lon, name: "city[lon]", step: :any, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :lat, "Latitude", class: "form-label" %>
            <%= f.number_field :lat, name: "city[lat]", step: :any, class: "form-control", required: true %>
          </div>
          <div class="text-center">
            <%= f.submit "Create City", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>